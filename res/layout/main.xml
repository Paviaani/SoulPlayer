<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    
    <LinearLayout 
    	android:id="@+id/row1Layout" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_weight="0.33" android:weightSum="1">
        
        <LinearLayout 
        	android:id="@+id/songbtnLayout" 
        	android:layout_height="fill_parent" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="0.50">
            
            <Button 
            	android:text="Songs"
            	android:onClick="startSongs"  
            	android:id="@+id/showSongs" 
            	android:layout_width="fill_parent" 
            	android:layout_height="fill_parent">
            </Button>
            
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/artistbtnLayout" 
        	android:layout_height="fill_parent" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="0.50">
            
            <Button 
            	android:text="Artists"
            	android:onClick="startArtists"  
            	android:id="@+id/showArtist" 
            	android:layout_width="fill_parent" 
            	android:layout_height="fill_parent">
            </Button>
            
        </LinearLayout>       
    </LinearLayout>
    
    <LinearLayout 
    	android:id="@+id/row2Layout" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_weight="0.33">
    	
    	<LinearLayout 
        	android:id="@+id/albumbtnLayout" 
        	android:layout_height="fill_parent" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="0.50">
    		
    		<Button 
    			android:text="Albums"
    			android:onClick="startAlbums"  
    			android:id="@+id/showAlbum" 
    			android:layout_width="fill_parent" 
    			android:layout_height="fill_parent">
    		</Button>
    		
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/genrebtnLayout" 
        	android:layout_height="fill_parent" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="0.50">
            
            <Button 
            	android:text="Genres"
            	android:onClick="startGenres"  
            	android:id="@+id/ShowGenre" 
            	android:layout_width="fill_parent" 
            	android:layout_height="fill_parent">
            </Button>
            
        </LinearLayout>
          
    </LinearLayout>
    
    <LinearLayout 
    	android:id="@+id/row3Layout" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_weight="0.33">
    	        
    	<LinearLayout 
        	android:id="@+id/searchbtnLayout" 
        	android:layout_height="fill_parent" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="0.50">
    		
    		<Button
    		 	android:text="Search"
    		 	android:onClick="startSearch"
    		 	android:id="@+id/showSearch" 
    		 	android:layout_width="fill_parent" 
    		 	android:layout_height="fill_parent" android:enabled="false">
    		</Button>
    		
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/netradiobtnLayout" 
        	android:layout_height="fill_parent" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="0.50">
            
            <Button 
            	android:text="NetRadio"
            	android:onClick="startNetRadio" 
            	android:id="@+id/startNetRadio" 
            	android:layout_width="fill_parent" 
            	android:layout_height="fill_parent">
            </Button>
            
        </LinearLayout>
          
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_weight="0.21" 
    	android:orientation="horizontal" 
    	android:id="@+id/playLayout" 
    	android:layout_height="100px" 
    	android:layout_width="fill_parent">
    	
        <Button 
        	android:layout_height="100px"
        	android:onClick="songBack" 
        	android:id="@+id/songBack" 
        	android:text="Back" 
        	android:layout_width="96px">
        </Button>
        
        <Button 
        	android:layout_height="100px"
        	android:onClick="songNext"
        	android:id="@+id/songNext" 
        	android:text="Next" 
        	android:layout_width="96px">
        </Button>
        
        <Button 
        	android:layout_height="100px" 
        	android:onClick="startAudio" 
        	android:id="@+id/songPlay" 
        	android:text="Play" 
        	android:layout_width="96px">
        </Button>
        
        <Button 
        	android:layout_height="100px" 
        	android:onClick="stopAudio" 
        	android:id="@+id/songStop" 
        	android:text="Stop" 
        	android:layout_width="96px">
        </Button>
        
        <Button 
        	android:layout_height="100px" 
        	android:onClick="pauseAudio" 
        	android:id="@+id/songPause" 
        	android:text="Menu" 
        	android:layout_width="96px"
        	android:enabled="false">
        </Button>
    </LinearLayout>
    
</LinearLayout>
